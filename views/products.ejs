<%-
include('partials/header', {
  meta: {
    title: richTextAsPlain(productsDocument.data.meta_title),
    description: richTextAsPlain(productsDocument.data.meta_description)
  }
});
%>

<div class="l-wrapper">
  <hr class="separator-hr"/>
</div>

<section class="products-section">
  <div class="l-wrapper">
    <header class="products-grid-header">
      <div class="products-grid-header-title">
        <%- richTextAsHtml(productsDocument.data.title) %>
      </div>
    </header>
  </div>
  <div class="products-grid-items-wrapper">
    <% productDocuments.forEach(function (document) { %>
      <div class="products-grid-item-wrapper">
        <img class="products-grid-item-image" src="<%= document.data.product_image.url %>" alt="<%= document.data.product_image.alt %>"/>
        <p class="products-grid-item-name">
          <a href="<%= linkResolver(document) %>">
            <%= richTextAsPlain(document.data.product_name) %>
          </a>
        </p>
        <p class="products-grid-item-subtitle"><%= richTextAsPlain(document.data.sub_title) %></p>
      </div>
    <% }); %>
  </div>
</section>

<div data-wio-id="<%= productsDocument.id %>"></div>

<%- include('partials/footer'); %>
