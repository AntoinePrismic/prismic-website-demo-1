<%-
include('partials/header', {
  meta: {
    title: richTextAsPlain(document.data.meta_title),
    description: richTextAsPlain(document.data.meta_description)
  }
});
%>

<div class="l-wrapper">
  <hr class="separator-hr"/>
</div>

<div class="product-sections-wrapper">

  <section>
    <div class="l-wrapper">
      <div class="product-hero-inner">
        <img class="product-hero-image" src="<%= document.data.product_image.url %>" alt="<%= document.data.product_image.alt %>"/>
        <div class="product-hero-content">
          <div class="product-hero-name">
            <%- richTextAsHtml(document.data.product_name) %>
          </div>
          <div class="product-hero-rich-content">
            <%- richTextAsHtml(document.data.rich_content) %>
          </div>
          <div class="product-hero-button-wrapper">
            <a class="a-button a-button--filled" href="<%= linkAsUrl(document.data.button_link) %>">
              <%= richTextAsPlain(document.data.button_label) %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="product-description">
    <div class="l-wrapper">
      <div class="product-description-title">
        <%- richTextAsHtml(document.data.title) %>
      </div>
      <div class="product-description-content">
        <%- richTextAsHtml(document.data.product_description) %>
      </div>
    </div>
  </section>

  <div class="product-separator-wrapper">
    <div class="l-wrapper">
      <hr class="separator-hr"/>
    </div>
  </div>

  <section>
    <div class="l-wrapper">
      <header class="products-grid-header">
        <div class="products-grid-header-title">
          <%- richTextAsHtml(document.data.related_products_title) %>
        </div>
      </header>
    </div>
    <div class="products-grid-items-wrapper">
      <% document.data.related_products.forEach(function (item) { %>
        <% if (item.product1.data) { %>
          <div class="products-grid-item-wrapper">
            <% if (item.product1.data.product_image) { %>
              <img class="products-grid-item-image" src="<%= item.product1.data.product_image.url %>" alt="<%= item.product1.data.product_image.alt %>"/>
            <% } %>
            <p class="products-grid-item-name">
              <a href="<%= linkAsUrl(item.product1) %>">
                <%= richTextAsPlain(item.product1.data.product_name) %>
              </a>
            </p>
            <p class="products-grid-item-subtitle"><%= richTextAsPlain(item.product1.data.sub_title) %></p>
          </div>
        <% } %>
      <% }); %>
    </div>
  </section>

</div><!-- /.product-wrapper -->

<div data-wio-id="<%= document.id %>"></div>

<%- include('partials/footer'); %>
